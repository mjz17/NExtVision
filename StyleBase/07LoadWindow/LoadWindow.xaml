<Window x:Class="StyleBase.LoadWindow"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StyleBase"
        mc:Ignorable="d"
        Title="LoadWindow" Height="160" Width="160"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Name="LinkProcess">
    <Border Background="Transparent">
        <Image gif:ImageBehavior.AnimatedSource="pack://application:,,,/StyleBase;component/IconStyle/loading.gif" Opacity="0.6"/>
    </Border>
</Window>
